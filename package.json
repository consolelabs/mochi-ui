{
  "name": "@consolelabs/websites",
  "private": false,
  "description": "Consolelabs Websites",
  "author": "@consolelabs",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "build:packages": "turbo build --filter=./packages/**/* --filter=!@consolelabs/storybook --filter=!@consolelabs/ui-components",
    "typecheck": "turbo typecheck",
    "build:packages-dryrun": "echo \"$(turbo build --filter=./packages/**/* --filter=!@consolelabs/storybook --dry-run=json --filter=!@consolelabs/ui-components)\" > turbo-build-debug.json",
    "dev:mochi-web": "turbo run dev --filter=mochi-web",
    "build:mochi-web": "turbo run build --filter=mochi-web",
    "build:ui": "turbo run build --filter=@consolelabs/ui-components",
    "dev:ui": "turbo run dev --filter=@consolelabs/ui-components",
    "build:icons": "turbo run build --filter=@consolelabs/icons",
    "dev:icons": "turbo run dev --filter=@consolelabs/icons",
    "storybook": "turbo run dev --filter=@consolelabs/storybook",
    "build:storybook": "turbo run build --filter=@consolelabs/storybook",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "jest --verbose --config ./jest.config.js --watch",
    "test:cov": "jest --verbose --config ./jest.config.js --ci --bail --silent --coverage --detectOpenHandles",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\" --cache",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "postinstall": "npx husky install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@storybook/react": "^7.4.6",
    "@swc-node/jest": "^1.6.8",
    "@swc/core": "^1.3.96",
    "@swc/jest": "^0.2.29",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.11.17",
    "@types/react": "^18.2.28",
    "eslint": "8.52.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.0.1",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "rimraf": "^5.0.5",
    "tsconfig": "workspace:*",
    "tsup": "^7.2.0",
    "turbo": "latest",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@typescript-eslint/parser": "^6.9.1"
  },
  "packageManager": "pnpm@8.6.10",
  "engines": {
    "node": ">=18.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
