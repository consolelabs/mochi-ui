{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:mochi-web": "turbo run dev --filter=mochi-web",
    "build:mochi-web": "turbo run build --filter=mochi-web",
    "build:ui": "turbo run build --filter=@consolelabs/ui-components",
    "dev:ui": "turbo run dev --filter=@consolelabs/ui-components",
    "build:icons": "turbo run build --filter=@consolelabs/icons",
    "dev:icons": "turbo run dev --filter=@consolelabs/icons",
    "storybook": "turbo run storybook --filter=@consolelabs/ui-components",
    "build:storybook": "turbo run build:storybook --filter=@consolelabs/ui-components",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "npx husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "eslint": "^8.52.0",
    "@storybook/react": "^7.4.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "resolutions": {
    "@typescript-eslint/parser": "^6.9.1"
  },
  "packageManager": "pnpm@8.6.10",
  "engines": {
    "node": ">=18.0.0"
  }
}
